<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>Symthomap</title>
    <style>
      html, body {
        height: 85%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 100%;
      }
    </style>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">
    <div class = "text-right"> <strong><%= user.local.email %></strong> </div>
    <div class = "text-right"> <a href="/logout" class="btn">Cerrar sesión</a></div>
    <div class="page-header text-center">
        <h1><span class="fa fa-tachometer"></span> Dashboard <%= user.local.user_type %> </h1>
    </div>
</div>
  <% if (user.local.user_type === "Epidemiologo") { %>
    <div id="map"></div>
  <% } %>

  <% if (user.local.user_type === "Médico") { %>
    <div class="col-sm-6 col-sm-offset-3">
      <h3> Crear Usuario </h3> <br>
      <form action="/dashboard" method="post">
          <div class="form-group">
              <label>Nombre</label>
              <input type="text" class="form-control" name="name">
          </div>
          <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
              <label>Dirección</label>
              <input type="text" class="form-control" name="dir">
          </div>
          <div class="form-group">
              <label>Sintomas</label>
              <input type="text" class="form-control" name="symptoms">
          </div>
          <button type="submit" class="btn btn-warning btn-lg">Crear Paciente</button>
      </form>
    </div>
  <% } %>

    <script>
    var map;
    function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
        center: {lat: 15.7, lng: -92.4},
        zoom: 8
      });
    }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhPyRa40wxABwjLJUkSqRza4aYY4PU1Jk&callback=initMap"
            async defer></script>
</body>
</html>
